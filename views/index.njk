{% extends 'layout.njk' %}
{% block main %}
        
    <section id="profile">
        <div class="container">
            <div class="profile">
                <header>
                    <div class="circle" style=" background: url({{item.avatar_url}}) center / cover;" ></div>
                    <div>
                        <p>{{item.name}}</p>
                        <span>{{item.bio}}</span>

                    </div>
                    <a href="{{item.html_url}}" target="blank">
                        <i class="far fa-edit"></i>
                        Visitar</a>
                </header>
                <div class="cards">
                    <div class="card" style="background: #046313;">
                        <p>Projetos</p>
                        <span>{{item.public_repos}}</span>
                    </div>
                    <div class="card" style="background: #044A7D;">
                        <p>SEGUINDO</p>
                        <span>{{item.following}}</span>
                    </div>
                    <div class="card"style="background: #725200;">
                        <p>Seguidores</p>
                        <span>{{item.followers}}</span>
                    </div>

                    
                </div>
                <div class="social">
                    <a href="https://www.linkedin.com/in/welisson-luca-assun%C3%A7%C3%A2o-vilar-483697189/" target="blank"><i class="fab fa-linkedin-in"></i></a>
                    <a href="https://www.facebook.com/welisson.luca/" target="blank">   <i class="fab fa-facebook-square"></i></a>
                    <a href="" target="blank">  <i class="fab fa-whatsapp"></i></a>
                </div>
            </div>
        </div>
    </section>
    {% endblock main %}

